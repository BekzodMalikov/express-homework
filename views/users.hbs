<h1>{{title}}</h1>

<table>
    <tbody>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>ID</th>
        </tr>
        {{#each users}}
        
        <tr>
            <td>{{name}}</td>
            <td>{{age}}</td>
            <td>{{id}}</td>
        </tr>
        {{/each}}

    </tbody>
</table>

<form action="/add/user" method="post">
    <input type="text" placeholder="Name" name="name">
    <input type="number" placeholder="Age" name="age">

    <input type="submit">
</form>